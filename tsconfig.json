{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "lib": [
            "es2017",
            "dom",
            "webworker",
            "es6",
            "DOM"
        ],
        "resolveJsonModule": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "allowJs": true,
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}
